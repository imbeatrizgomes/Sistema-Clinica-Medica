<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.AgendarConsultaController"
      alignment="CENTER"
      spacing="20">

    <padding>
        <Insets top="30" bottom="30" left="30" right="30"/>
    </padding>

    <GridPane hgap="10"
              vgap="10"
              alignment="CENTER">

        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" prefWidth="80"/>
            <ColumnConstraints prefWidth="260"/>
        </columnConstraints>

        <Label text="Agendar Consulta"
               GridPane.columnSpan="2"
               GridPane.halignment="CENTER"
               style="-fx-font-size: 20px; -fx-font-weight: bold;">
            <GridPane.margin>
                <Insets bottom="15"/>
            </GridPane.margin>
        </Label>

        <Label text="MÃ©dico:" GridPane.rowIndex="1"/>
        <ComboBox fx:id="comboMedicos"
                  GridPane.rowIndex="1"
                  GridPane.columnIndex="1"
                  prefWidth="260"/>

        <Label text="Data:" GridPane.rowIndex="2"/>
        <DatePicker fx:id="campoData"
                    GridPane.rowIndex="2"
                    GridPane.columnIndex="1"
                    prefWidth="260"/>

        <Button text="Agendar"
                GridPane.rowIndex="3"
                GridPane.columnSpan="2"
                GridPane.halignment="CENTER"
                onAction="#agendar">
            <GridPane.margin>
                <Insets top="15"/>
            </GridPane.margin>
        </Button>

        <Button text="Voltar"
                GridPane.rowIndex="4"
                GridPane.columnSpan="2"
                GridPane.halignment="CENTER"
                onAction="#voltar"/>

    </GridPane>

</VBox>